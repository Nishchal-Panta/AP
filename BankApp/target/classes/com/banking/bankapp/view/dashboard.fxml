<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banking.bankapp.controller.DashboardController">
    <top>
        <VBox alignment="CENTER" styleClass="header-panel">
            <children>
                <Label styleClass="header-title" text="Rural Bank of Nepal" />
                <Label fx:id="welcomeLabel" styleClass="header-subtitle" text="Welcome, Customer" />
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="content-panel">
            <children>
                <Label styleClass="section-title" text="Account Information:" />
                <TextArea fx:id="accountDisplayArea" editable="false" prefHeight="300.0" prefWidth="700.0" styleClass="text-area" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="15.0" styleClass="control-panel">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label styleClass="form-label" text="Select Account:" />
                        <ComboBox fx:id="accountSelector" prefWidth="250.0" styleClass="combo-box" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button onAction="#handleDeposit" prefWidth="120.0" styleClass="success-button" text="Deposit" />
                        <Button onAction="#handleWithdraw" prefWidth="120.0" styleClass="danger-button" text="Withdraw" />
                        <Button onAction="#handleAddInterest" prefWidth="120.0" styleClass="info-button" text="Add Interest" />
                        <Button onAction="#handleViewTransactions" prefWidth="120.0" styleClass="secondary-button" text="View Transactions" />
                        <Button onAction="#updateAccountDisplay" prefWidth="120.0" styleClass="primary-button" text="Refresh" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
