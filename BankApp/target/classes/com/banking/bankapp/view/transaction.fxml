<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="400.0" spacing="20.0" styleClass="root" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banking.bankapp.controller.TransactionController">
    <children>
        <Label fx:id="operationLabel" styleClass="title-label" text="Operation Type" />
        <Label fx:id="currentBalanceLabel" styleClass="form-label" text="Current Balance: 0.00" />
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label styleClass="form-label" text="Amount:" />
                <TextField fx:id="amountField" promptText="Enter amount" styleClass="text-input" />
            </children>
            <padding>
                <Insets left="40.0" right="40.0" />
            </padding>
        </VBox>
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button onAction="#handleConfirm" prefWidth="100.0" styleClass="primary-button" text="Confirm" />
                <Button onAction="#handleCancel" prefWidth="100.0" styleClass="secondary-button" text="Cancel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
