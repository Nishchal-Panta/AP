<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.nepaltourism.desktopapp.controllers.LoginController" prefWidth="400" prefHeight="300">
    <Label fx:id="idLabel" text="ID" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="50"/>
    <TextField fx:id="idField" prefWidth="300" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50"/>
    <Label fx:id="passwordLabel" text="Password" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="50"/>
    <PasswordField fx:id="passwordField" prefWidth="300" AnchorPane.topAnchor="120" AnchorPane.leftAnchor="50"/>
    <Label fx:id="languageLabel" text="Language" AnchorPane.topAnchor="160" AnchorPane.leftAnchor="50"/>
    <ComboBox fx:id="languageComboBox" prefWidth="300" AnchorPane.topAnchor="190" AnchorPane.leftAnchor="50"/>
    <HBox spacing="10" AnchorPane.topAnchor="240" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">
        <Button text="Login" onAction="#handleLogin"></Button>
        <Button text="Sign Up" onAction="#handleSignup"></Button>
    </HBox>
</AnchorPane>
